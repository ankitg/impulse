<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ankitguglani.impulse"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="com.google.android.glass.permission.DEVELOPMENT" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
         >
         
		<uses-library
            android:name="com.google.android.glass"
            android:required="true" />
		
        <service
            android:label="@string/app_name"
            android:icon="@drawable/ic_launcher"
            android:name="com.ankitguglani.impulse.BeaconService"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.noelportugal.glassbeacon.SCAN" />
            </intent-filter>
                        <intent-filter>
                <action android:name="com.google.android.glass.action.VOICE_TRIGGER" />
            </intent-filter>

            <meta-data
                android:name="com.google.android.glass.VoiceTrigger"
                android:resource="@xml/voice_prompt" />
        </service>
        <activity android:name="GlassMenuActivity" />
    </application>

</manifest>